public boolean modThree(int[] nums) {
  
  
  for(int i=0;i<nums.length;i++){
         int j = i;
         int count=0;
          int count2 = 0;
         while(j < nums.length && nums[j] % 2 == 0){
           count++;
           j++;
         }
         j = i;
         while(j < nums.length && nums[j] % 2 == 1){
           count2++;
           j++;
         }
         if(count >=3 || count2 >= 3){
           return true;
         }
     }
     
  return false;
}

