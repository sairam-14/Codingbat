public int withoutDoubles(int die1, int die2, boolean noDoubles) {
  
  int sum =0;
  if(noDoubles){
    if(die1==die2){
      if(die1==6&&die2==6){
        return 7;
      }else{
      sum=die1+die2;
    return sum+1 ;
      }
    }else{
      sum=die1+die2;
      return sum;
    }
  }else{
    if(die1==die2){
      
      sum=die1+die2;
      return sum;
    }else{
      sum=die1+die2;
      return sum;
    }
  }

  
}
